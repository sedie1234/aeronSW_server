    //set scene
    space.addPoint(glm::vec3(0.0f, 0.0f, 0.0f));  // (0,0,0)
    space.addPoint(glm::vec3(1.0f, 1.0f, 0.0f));  // (1,1,0)
    space.addPoint(glm::vec3(-1.0f, -1.0f, 0.0f));  // (-1,-1,0)
    space.addPoint(glm::vec3(-1.0f, -1.0f, -1.0f));  // (-1,-1,-1)
    space.addPoint(glm::vec3(1.0f, 1.0f, -1.0f));  // (1,1,-1)
    space.addLine(glm::vec3(0.0f, 0.0f, 0.0f), glm::vec3(1.0f, 0.0f, 0.0f));  // x축
    space.addLine(glm::vec3(0.0f, 0.0f, 0.0f), glm::vec3(0.0f, 1.0f, 0.0f));  // y축
    space.addLine(glm::vec3(0.0f, 0.0f, 0.0f), glm::vec3(0.0f, 0.0f, 1.0f));  // z축
